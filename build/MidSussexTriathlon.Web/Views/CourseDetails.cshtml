@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.CourseDetails>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var courseDetails = Model.Content;
}

@{ Html.RenderPartial("~/Views/Partials/PageHeader.cshtml");}

<section id="course-details" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="wow fadeInUp" data-wow-delay="0s">@courseDetails.Heading</h3>      
                <h4 class="wow fadeInUp" data-wow-delay="0s">@courseDetails.SubHeading</h4>
            </div>
        </div>
        @foreach (var courseDetail in courseDetails.CourseSections.Cast<CourseDetail>())
        {
        <div class="row">
            <div class="col-md-12">
                <h3>@courseDetail.Heading</h3>
            </div>
            <div class="col-md-8">
                @courseDetail.Content
            </div>
            <div class="col-md-4">
                @if (courseDetail.Image != null)
                {
                    <div class="gallery-item">
                        <a href="#">
                            <img src="@courseDetail.Image.Url" alt="@courseDetail.Image.GetPropertyValue(" alt")">
                        </a>
                        <div class="overlay">
                            <div class="icons">
                                <a class="preview lightbox" href="@courseDetail.Image.Url">
                                    <i class="icon-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                </div>
        </div>
        }
    </div>
</section>