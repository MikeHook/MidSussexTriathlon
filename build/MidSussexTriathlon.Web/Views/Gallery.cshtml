@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Gallery>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var gallery = Model.Content;
}

@{ Html.RenderPartial("~/Views/Partials/PageHeader.cshtml");}

<section id="flickr-gallery" class="section">
    <div class="container">
        @if (!string.IsNullOrEmpty(gallery.Gallery1FlickrId))
        {
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title wow fadeInUp" data-wow-delay="0s">@gallery.Gallery1Heading</h2>
                    <div id="flickrembed_54"></div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(gallery.Gallery2FlickrId))
        {
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title wow fadeInUp" data-wow-delay="0s">@gallery.Gallery2Heading</h2>
                    <div id="flickrembed_55"></div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(gallery.Gallery3FlickrId))
        {
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title wow fadeInUp" data-wow-delay="0s">@gallery.Gallery3Heading</h2>
                    <div id="flickrembed_56"></div>
                </div>
            </div>
        }


        <small style="display: block; text-align: center; margin: 0 auto;">
            Powered by
            <a href="https://flickrembed.com" target="_blank">flickr embed</a>.
        </small>
    </div>
</section>

@section Foot {
    <script src='https://flickrembed.com/embed_v2.js.rand.php?container=flickrembed_54&source=flickr&layout=responsive&input=@gallery.Gallery1FlickrId&sort=0&by=album&theme=tiles_justified&scale=fill&limit=50&skin=default&autoplay=true'></script>

    <script src='https://flickrembed.com/embed_v2.js.rand.php?container=flickrembed_55&source=flickr&layout=responsive&input=@gallery.Gallery2FlickrId&sort=0&by=album&theme=tiles_justified&scale=fill&limit=50&skin=default&autoplay=true'></script>

    <script src='https://flickrembed.com/embed_v2.js.rand.php?container=flickrembed_56&source=flickr&layout=responsive&input=@gallery.Gallery3FlickrId&sort=0&by=album&theme=tiles_justified&scale=fill&limit=50&skin=default&autoplay=true'></script>


    <script type="text/javascript">function showpics() { var a = $("#box").val(); $.getJSON("http://api.flickr.com/services/feeds/photos_public.gne?tags=" + a + "&tagmode=any&format=json&jsoncallback=?", function (a) { $("#images").hide().html(a).fadeIn("fast"), $.each(a.items, function (a, e) { $("<img/>").attr("src", e.media.m).appendTo("#images") }) }) }</script>


}