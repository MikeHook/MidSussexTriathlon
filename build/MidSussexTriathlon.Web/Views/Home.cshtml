@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}

<!-- Main Slider Section Start -->
<div id="carousel-area">
    <div id="carousel-slider" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="banner-background" src="/assets/img/slider/FinishBanner3-1920x600.jpg" alt="">    
            </div>
            <div class="item">
                <img class="banner-background" src="/assets/img/slider/triathlon-swim1920x600.jpg" alt="">             
            </div>
            <div class="item">
                <img class="banner-background" src="/assets/img/slider/triathlon-bike1920x600.jpg" alt="">
            </div>
        </div>
        <img class="banner-image" src="assets/img/slider/WebsiteBanner-1920x600.png" alt="">
        <div class="carousel-caption enter">
            <div class="buttons wow fadeInDown" data-wow-delay="0.2s">
                <a class="btn btn-lg btn-common" href="/enter-race">Enter Now</a>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-slider" role="button" data-slide="prev">
            <span class="icon-arrow-left" aria-hidden="true"></span>
        </a>
        <a class="right carousel-control" href="#carousel-slider" role="button" data-slide="next">
            <span class="icon-arrow-right" aria-hidden="true"></span>
        </a>
    </div>
</div>
<!-- Main Slider Section End -->
<!-- Counter Section Start -->
<section id="counter" class="section">
    <div class="counter-wrapper clearfix">
        <div class="container">
            <div class="counter-title-block">
                <h4 class="counter-title">Time Left To Event:</h4>
                <div class="counter-tilt-desc">Enter now before time runs out!</div>
            </div>
            <div class="counters-block clearfix">
                <div id="countdown-container">

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Counter Section End -->
<!-- Testimonials Section Start -->
<section id="testimonials" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title wow fadeInUp" data-wow-delay="0s">Testimonials</h2>
                <p class="section-subcontent wow fadeInUp" data-wow-delay="0.2s">
                    Not sure what the race is all about? Our previous competitors love it and many come back year on year,
                    <br> Check out our testimonials!
                </p>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="wow fadeInUp" data-wow-delay="0.1s">
                    <h3>
                        "The best organised and friendliest event of all the local races"</h3>
                        <p>Tim, 2018 finisher</p>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="wow fadeInUp" data-wow-delay="0.1s">
                    <h3>"A thoroughly well-organised event... to attract first-timers and experienced triathletes in equal measure"</h3>
                    <p>Chris, 2018 finisher</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="wow fadeInUp" data-wow-delay="0.1s">
                    <h3>
                        "It's not just a race it's a great experience... the club [are] doing what they love and encouraging others to
                        love it too."
                    </h3>
                    <p>Paul, 2018 finisher</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonials Section End -->
<!-- Call to action Section -->
<section id="intro" class="section-small">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="wow animated slideInRight" data-wow-delay=".4s">
                    The best value Triathlon in the South East. Bar none!
                </h2>
                <a rel="nofollow" href="/enter-race" class="wow animated fadeInUp btn btn-inverse mt-50" data-wow-delay=".6s">
                    <i class="fa fa-check-circle"></i> Enter now!
                    <div class="ripple-container"></div>
                </a>
            </div>
        </div>
    </div>
</section>
<!-- Call to action Section End -->
<!-- Sponsors Section Start -->
<section id="sponsors" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title wow fadeInUp" data-wow-delay="0s">
                    Our Sponsors
                </h2>
                <p class="section-subcontent wow fadeInUp" data-wow-delay="0.2s">
                    Can highlight any particularly good sponsors here, the rest are listed on the
                    <a href="sponsors.html">sponsors page</a>.
                </p>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="spnsors-logo wow fadeInUp" data-wow-delay="0.1s">
                    <a href="#">
                        <img src="assets/img/sponsors/ChiaCompanyLogo.png" alt="">
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="spnsors-logo wow fadeInUp" data-wow-delay="0.2s">
                    <a href="#">
                        <img src="assets/img/sponsors/Dinnages.png" alt="">
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="spnsors-logo wow fadeInUp" data-wow-delay="0.3s">
                    <a href="#">
                        <img src="assets/img/sponsors/HASSOCKS EYECARE CENTER LOGO_500x200.jpg" alt="">
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="spnsors-logo wow fadeInUp" data-wow-delay="0.4s">
                    <a href="#">
                        <img src="assets/img/sponsors/Hurst-College.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Sponsors Section End -->
